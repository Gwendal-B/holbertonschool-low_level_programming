#include "main.h"

/**
 *print_triangle - dessine un triangle avec #
 *@size: taille du triangle
 *
 *Return: R
 */
void print_triangle(int size)
{
	int i, j;

	if (size <= 0)
	{
		_putchar('\n');
	}
	else
	{
		for (i = 1; i <= size -i; i++)
		{
			for (j = 0; j < size; j++)
			{
				_putchar(' ');
			}
			for (j = 0; j < i; j++)
			{
				_putchar('#');
			}
			_putchar('\n');
		}
	}
}
