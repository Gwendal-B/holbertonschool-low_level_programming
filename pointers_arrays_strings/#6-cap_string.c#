#include "main.h"
char *cap_string(char *s)
{
	char *p = s;
	int sep = 1;

	while (*p)
	{
		if (*p == ' ' || *p == '\t' || *p == '\n' ||
		    *p == ',' || *p == ';' || *p == '.' ||
		                *p == '!' || *p == '?' || *p == '"' ||
		    *p == '(' || *p == ')' || *p == '{' || *p == '}')
		{
			sep = 1;
		}
		else if (sep && *p >= 'a' && *p <= 'z')
		{
			*p -= 32;
			sep = 0;
		}
		else
		{
			sep = 0;
		