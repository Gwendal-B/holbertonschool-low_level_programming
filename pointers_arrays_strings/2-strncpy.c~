#include "main.h"

/**
 *_strncpy - copie n caracter de src vers dest
 *@dest: chaine de destination
 *@src: chaine source
 *@n:nombre de caractere max a copier
 *
 *Return: pointe vers dest
 */
char *_strncpy(char *dest, char *src, int n)
{
	char *p = dest;

	while (n && *src)
	{
		*p++ = *src++;
		n--;
	}
	while (n--)
		*p++;
	return (dest);
}
