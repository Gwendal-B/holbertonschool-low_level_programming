#include "main.h"
#include <stdio.h>

/**
 *print_array - affiche n element du tableau
 *@a: pointe vers le premier element du tableau
 *@n: nombre d'element a afficher
 *
 *Return: R
 */
void print_array(int *a, int n)
{
	while (n--)
	{
		printf("%d", *a);
		a++;

		if (n)
		{
			printf(", ");
		}
		printf("\n");
}
